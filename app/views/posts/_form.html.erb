

<% current_user.present? %>
<%= form_with(model: [@post] , local: true) do |form| %>
<%# byebug %>
<p>
	<%= form.label :title %>
	<%= form.text_field :title %>
</p>
<p>
	<%= form.label :content,placehodler: "you can insert images also" %>
	<%= form.rich_text_area :content %>
</p>
<p>
	<%= form.hidden_field :user_id %>
</p>
<p>
	<%= form.submit %>
</p>
<% end %>


