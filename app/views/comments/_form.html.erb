<% current_user.present? %>
<%# byebug %>
<%= form_with(model: [@post ,@post.comments.build], local: true) do |form| %>
	<p>
		<%= form.label :commenter %>
		<%= form.text_field :commenter %>
	</p>
	<p>
		<% form.hidden_field :post_id %>
		
	</p>
	<p>
		<% form.hidden_field :user_id , value: current_user.id%>

	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>